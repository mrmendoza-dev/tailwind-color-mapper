{
  "name": "tailwind-color-mapper",
  "version": "1.0.2",
  "type": "module",
  "description": "OKLCH-first Tailwind color mapping utilities with comprehensive format support",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core.esm.js",
      "require": "./dist/core.cjs",
      "types": "./dist/core.d.ts"
    },
    "./hex": {
      "import": "./dist/hex.esm.js",
      "require": "./dist/hex.cjs",
      "types": "./dist/hex.d.ts"
    },
    "./oklch": {
      "import": "./dist/oklch.esm.js",
      "require": "./dist/oklch.cjs",
      "types": "./dist/oklch.d.ts"
    },
    "./data": "./tailwindMapper.json"
  },
  "files": [
    "dist/",
    "tailwindMapper.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "colors",
    "oklch",
    "color-mapping",
    "design-system",
    "typescript",
    "color-conversion"
  ],
  "author": "Mendoza <mrmendoza.dev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmendoza-dev/tailwind-color-mapper.git"
  },
  "bugs": {
    "url": "https://github.com/mrmendoza-dev/tailwind-color-mapper/issues"
  },
  "homepage": "https://github.com/mrmendoza-dev/tailwind-color-mapper#readme",
  "dependencies": {
    "culori": "^4.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  }
}
